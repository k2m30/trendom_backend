<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.order(:dir).each do |user| %>
      <tr>
        <td><%= user.dir %></td>
        <td><%= user.industry.name %></td>
        <td><%= 'paused' if user.paused? %></td>
        <td><%= link_to 'Keywords', keywords_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if user.paused? %>
          <td><%= link_to 'Unpause', unpause_user_path(user) %></td>
        <% else  %>
            <td><%= link_to 'Pause', pause_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

