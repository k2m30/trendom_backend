%h1
  = @user.card_holder_name || @user.name

.row
  .col-md-2
    %img{src: @user.image, width: '100px'}
  .col-md-10
    .row
      .col-md-4
        Email:
      .col-md-8
        %p
          = @user.email
    .row
      .col-md-4
        Prospects left:
      .col-md-8
        %p
          = @user.calls_left
    .row
      .col-md-4
        Current plan:
      .col-md-8
        %p
          = @user.plan
    .row
      .col-md-4
        Next payment:
      .col-md-8
        %p
          = @user.subscription_expires || Time.now.to_formatted_s(:short)
.row
  .col-md-12
    %table.table
      %thead
        %th
        %th
          Name
        %th
          Emails available
        %th
          Position
        %th
          Location
        %th
          Emails
        %th
          Profile
      %tbody
        - @user.profiles_with_revealed_emails.each do |p|
          %tr
            %td
              =link_to remove_profile_users_path(id: p.id), method: :post do
                = fa_icon 'remove'
            %td
              =p.name
            %td
              =p.emails_available
            %td
              =p.position
            %td
              =p.location
            %td
              -p.emails.each do |email|
                %p =email
            -#%td
            -#  =p.notes unless p.notes.empty?
            %td
              = link_to 'Linkedin profile', p.linkedin_url, target: :_blank
            %td
              =p.twitter_url
            %td
              =p.facebook_url
        - @user.profiles_with_hidden_emails.each do |p|
          %tr
            %td
              =link_to remove_profile_users_path(id: p.id), method: :post do
                = fa_icon 'remove'
            %td
              =p.name
            %td
              =p.emails_available
            %td
              =p.position
            %td
              =p.location
            %td
              -p.emails_available.times do
                %p
                  *********@*****
            -#%td
            -#  =p.notes unless p.notes.empty?
            %td
              = link_to 'Linkedin profile', p.linkedin_url, target: :_blank
            %td
              =p.twitter_url
            %td
              =p.facebook_url

.row
  .col-md-8
  .col-md-4
    = link_to download_user_path(@user, format: :csv), class: 'btn btn-info' do
      = @user.active? ? 'Download' : 'Choose subscription plan to download prospects'
      = fa_icon 'download'