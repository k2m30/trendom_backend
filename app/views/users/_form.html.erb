<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <table>
        <tr>
          <td>Dir</td>
          <td><%= f.text_field :dir, size: 150 %></td>
        </tr>
        <tr>
          <td>Industry</td>
          <%- id = @user.industry.nil? ? Industry.first.id : @user.industry.id  %>
          <td><%= select_tag 'industry', options_from_collection_for_select(@industries, 'id', 'name', id ) %></td>
        </tr>
        <tr>
          <td>Login</td>
          <td><%= f.text_field :login, size: 150 %></td>
        </tr>
        <tr>
          <td>Password</td>
          <td><%= f.text_field :password, size: 150 %></td>
        </tr>
        <tr>
          <td>Proxy</td>
          <td><%= f.text_field :proxy, size: 150 %></td>
        </tr>
        <tr>
          <td>Comment</td>
          <td><%= f.text_field :comment, size: 150 %></td>
        </tr>
        <tr>
          <td>Linkedin profile</td>
          <td><%= f.text_field :linkedin_profile, size: 150 %></td>
        </tr>
        <tr>
          <td>Command string</td>
          <td><%= f.text_field :command_str, size: 150 %></td>
        </tr>
        <tr>
          <td>Paused?</td>
          <td><%= f.check_box :paused %></td>
        </tr>

      </table>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
